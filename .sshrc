# Toggle showing history timestamps
function toggle_history_timestamps () {
	if [ -z "$HISTTIMEFORMAT" ];
	then
		export HISTTIMEFORMAT="%d/%m/%y %T "
	else
		unset HISTTIMEFORMAT
	fi
}
alias th='toggle_history_timestamps'

