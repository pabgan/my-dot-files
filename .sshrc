# USEFUL FUNCTIONS
#
# Create a directory and cd into it. Name is taken from ZSH analogue function.
take () {
  mkdir -p "$1"
  cd "$1"
}

# Connect to a database
function sqlcl() {
	$HOME/.sqlcl/bin/sqlcl $1/assia@db-ref.assia-inc.com:1521:dslo2 @$2
}
